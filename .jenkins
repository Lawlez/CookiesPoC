pipeline {
    agent {
        docker {
            image 'timbra-build'
            args '-v /var/lib/jenkins/yarn/cache:/tmp/yarn/.cache -v /var/lib/jenkins/shared:/mnt/shared'
        }
    }
    environment {
        BITBUCKET_COMMON_CREDS = credentials('svcgit')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                bitbucketStatusNotify ( buildState: 'INPROGRESS' )

                sh '/mnt/shared/generate-gitconfig.sh BITBUCKET_COMMON_CREDS'
                sh '/mnt/shared/generate-npmconfig.sh BITBUCKET_COMMON_CREDS'

                sh 'yarn config set cache-folder /tmp/yarn/.cache'
                sh 'yarn install --network-timeout 1000000'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'yarn test'
            }
        }
    }
    post {
        success {
            bitbucketStatusNotify ( buildState: "SUCCESSFUL" )
        }
        failure {
            bitbucketStatusNotify ( buildState: "FAILED" )
        }
        cleanup {
            cleanWs()
            dir("${env.WORKSPACE}@tmp") {
                deleteDir()
            }
        }
    }
    triggers {
        bitbucketPush()
    }
}